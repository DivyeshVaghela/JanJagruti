<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/background</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_selector</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_little</item>
    </style>

    <style name="SuccessButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/success_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_little</item>
    </style>

    <style name="ErrorTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="InputFieldErrorTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="BrandStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_very_very_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewSharpCorners" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>
